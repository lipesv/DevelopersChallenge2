@{
    ViewData["Title"] = "Financial transactions";
}

<div class="panel panel-default panel-controls">

    <div class="panel panel-heading">
        <h3>Import Transactions</h3>
    </div>

    <div class="panel panel-body">

        @if (ViewData["Error"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show">
                <button type="button" class="close" data-dismiss="alert">&times;</button>
                <strong>Error</strong>@ViewData["Error"]
            </div>
        }

        <form asp-controller="Transaction" asp-action="Import" enctype="multipart/form-data">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <p>Upload one or more files</p>
                <input type="file" name="files" multiple />
            </div>

            <div class="form-group">

                <input type="submit" value="Send" class="btn btn-success" />
                <a asp-controller="Transaction" asp-action="Index" class="btn btn-info">Back</a>
            </div>

        </form>

    </div>

</div>

@section Scripts {
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
